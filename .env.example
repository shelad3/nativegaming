# ================================
# DEVELOPMENT ENVIRONMENT VARIABLES
# ================================
# Copy this file to .env.local and fill in your values

# ================================
# FIREBASE CONFIGURATION (Frontend)
# ================================
# Get from: https://console.firebase.google.com/
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id

# ================================
# BACKEND API (Frontend)
# ================================
# Development backend URL
VITE_API_URL=http://localhost:5000

# ================================
# GEMINI AI (Frontend)
# ================================
VITE_GEMINI_API_KEY=your_gemini_api_key

# ================================
# DATABASE (Backend)
# ================================
# Local development (default)
MONGODB_URI=mongodb://localhost:27017/nativecodex
# Or use MongoDB Atlas for development
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/nativecodex

# ================================
# JWT (Backend)
# ================================
JWT_SECRET=dev_secret_change_in_production

# ================================
# GOOGLE OAUTH (Backend)
# ================================
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# ================================
# PESAPAL (Backend)
# ================================
PESAPAL_CONSUMER_KEY=your_pesapal_consumer_key
PESAPAL_CONSUMER_SECRET=your_pesapal_consumer_secret
PESAPAL_ENVIRONMENT=sandbox
PESAPAL_IPN_URL=http://localhost:5000/api/payments/ipn

# ================================
# SERVER (Backend)
# ================================
PORT=5000
NODE_ENV=development

# ================================
# DEPRECATED - STRIPE (To be removed)
# ================================
# STRIPE_SECRET_KEY=your_stripe_secret_key
# STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret
