# PlayNative Production Environment Variables

# ================================
# DATABASE
# ================================
# Get your URI from MongoDB Atlas
MONGODB_URI=mongodb+srv://<user>:<password>@cluster.mongodb.net/nativecodex?retryWrites=true&w=majority

# ================================
# AUTHENTICATION
# ================================
# JWT Secret (32+ chars)
JWT_SECRET=your_32_character_long_secret_here

# Firebase Service Account JSON (Minified string)
# Get from Firebase Console > Project Settings > Service Accounts
FIREBASE_SERVICE_ACCOUNT={"type": "service_account", "project_id": "...", ...}

# Google OAuth
GOOGLE_CLIENT_ID=...
GOOGLE_CLIENT_SECRET=...

# ================================
# PAYMENTS
# ================================
# Pesapal
PESAPAL_CONSUMER_KEY=...
PESAPAL_CONSUMER_SECRET=...
PESAPAL_ENVIRONMENT=production
PESAPAL_IPN_URL=https://your-api.com/api/payments/ipn

# ================================
# DEPLOYMENT
# ================================
FRONTEND_URL=https://playnative.io
NODE_ENV=production
PORT=5000

# ================================
# FRONTEND BUILD TIME (Vite)
# ================================
# These must start with VITE_ to be available in the frontend
VITE_API_URL=https://playnative.io/api
VITE_FIREBASE_API_KEY=...
VITE_FIREBASE_AUTH_DOMAIN=...
VITE_FIREBASE_PROJECT_ID=...
VITE_FIREBASE_STORAGE_BUCKET=...
VITE_FIREBASE_MESSAGING_SENDER_ID=...
VITE_FIREBASE_APP_ID=...
